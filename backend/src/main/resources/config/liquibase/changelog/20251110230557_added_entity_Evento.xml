    <!--
        Added the entity Evento.
    -->
    <changeSet id="20251110230557-1" author="jhipster">
        <createTable tableName="evento" remarks="Entidad que replica localmente los datos de un evento\nproveniente del servicio de la CÃ¡tedra.">
            <column name="id" type="bigint" autoIncrement="true" startWith="1500">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="evento_catedra_id" type="bigint">
                <constraints nullable="false" unique="true" uniqueConstraintName="ux_evento__evento_catedra_id" />
            </column>
            <column name="titulo" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="resumen" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="descripcion" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="fecha" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="direccion" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="imagen" type="varchar(2048)">
                <constraints nullable="true" />
            </column>
            <column name="fila_asientos" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="column_asientos" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="precio_entrada" type="decimal(21,2)">
                <constraints nullable="true" />
            </column>
            <column name="evento_tipo_nombre" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="evento_tipo_descripcion" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="evento" columnName="fecha" columnDataType="${datetimeType}"/>
    </changeSet>

